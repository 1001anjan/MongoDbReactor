pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script { /// Enclose shell steps within a script block
                   sh 'chmod +x ./buildScripts/build.sh' // Grant execute permission
                    sh './buildScripts/build.sh'
                }
            }
        }


        stage('Test') {
            steps {
                script {
                    sh 'chmod +x ./buildScripts/test.sh' // Grant execute permission
                    sh './buildScripts/test.sh'
                     publishHTML(target: [
                                                allowMissing: false, alwaysLinkToLastBuild: true,
                                                keepAll     : true, reportDir: 'build/reports/jacoco',
                                                reportFiles : 'test/html/index.html',
                                                reportName: 'Jacoco Report Merged'
                                        ]
                                        )
                    publishHTML(target: [
                            allowMissing: false, alwaysLinkToLastBuild: true,
                            keepAll     : true, reportDir: 'build/reports/tests',
                            reportFiles : 'test/index.html',
                            reportName: 'Unit Tests'
                    ]
                    )
                    publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, reportDir: 'build/reports/jacoco/test/html', reportFiles: 'index.html', reportName: 'JaCoCo Test Report'])

                }
            }
        }

        // Define more stages as needed
    }
}